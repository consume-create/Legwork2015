<div class="slide-inner cover">
	<div class="cover-wrap">
		<div class="cnv-wrap">
			<video id="<%= @id %>-player" width="1600" height="900" preload="auto" loop="true" muted>
				<source src="<%= @base_video_path %>" type="video/mp4">
			</video>
		</div>
	</div>
	<% if @id isnt 'home': %>
		<a href="<%= @watch_url %>" class="ajaxy">
			<div class="play-btn">
				<span></span>
				<span></span>
			</div>
			View Reel
		</a>
	<% end %>
</div>
