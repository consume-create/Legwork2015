<div class="media-content">
	<div class="slideshow-holder">
		<div class="slider">
			<% n = 0 %>
			<% for img in @images: %>
				<% n++ %>
				<div class="slide-img" style="background-image: url('<%= img %>')"></div>
			<% end %>
		</div>
	</div>
	<div class="slideshow-controls">
		<ul class="cf">
			<li class="arrow prev"><div class="icon"></div></li>
			<li class="slideshow-counter"></li>
			<li class="arrow next"><div class="icon"></div></li>
		</ul>
	</div>
</div>